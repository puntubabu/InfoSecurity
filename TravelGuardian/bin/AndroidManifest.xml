<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cse4471.travelguardian"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Travelguardian" >
        <activity
            android:name="com.cse4471.travelguardian.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cse4471.travelguardian.StartActivity"
            android:label="@string/title_activity_start" >
        </activity>
        <activity
            android:name="com.cse4471.travelguardian.DataEntryActivity"
            android:label="@string/title_activity_data_entry" >
        </activity>
        <activity
            android:name="com.cse4471.travelguardian.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.cse4471.travelguardian.LoginValidationActivity"
            android:label="@string/title_activity_login_validation" >
        </activity>
        <activity
            android:name="com.cse4471.travelguardian.ActiveTripActivity"
            android:label="@string/title_activity_active_trip" >
        </activity>
        <activity
            android:name="com.cse4471.travelguardian.PanicActivity"
            android:label="@string/title_activity_panic" >
        </activity>
        <activity
            android:name="com.cse4471.travelguardian.EndTripActivity"
            android:label="@string/title_activity_end_trip" >
        </activity>
    </application>

</manifest>
